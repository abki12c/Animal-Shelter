<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/bottomNavigationView_subordinate"
        app:menu="@menu/bottom_nav_menu_subordinates"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="304dp"
        android:layout_height="135dp"
        android:layout_marginTop="72dp"
        android:text="Select the desired statistic to view"
        android:textAlignment="textStart"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/animals_types"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:layout_marginTop="64dp"
        android:text="Animals Types"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <Button
        android:id="@+id/animals_breeds"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:layout_marginTop="44dp"
        android:text="Animals Breeds"
        app:layout_constraintEnd_toEndOf="@+id/animals_types"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/animals_types"
        app:layout_constraintTop_toBottomOf="@+id/animals_types" />

    <Button
        android:id="@+id/animals_adopted"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:layout_marginTop="68dp"
        android:text="Animals Adopted"
        app:layout_constraintEnd_toEndOf="@+id/animals_breeds"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/animals_breeds"
        app:layout_constraintTop_toBottomOf="@+id/animals_breeds" />

</androidx.constraintlayout.widget.ConstraintLayout>